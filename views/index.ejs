<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <title><%= title %></title>

    <style>
        table {
            border-collapse: collapse;
            margin: 20px 0;
        }
        td {
            border: 1px solid #000;
            width: 50px;
            height: 50px;
            padding: 0;
            text-align: center;
            vertical-align: middle;
        }
        input[type="checkbox"] {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            cursor: pointer;
            display: block;
        }
    </style>
</head>
<body>
    <h1><%= title %></h1>
    <p><%= message %></p>

    <form action=""/" method="post">
        <table>
            <% for(let lignes = 0; lignes < 3; lignes++) { %>
                <tr>
                    <% for(let colonnes = 0; colonnes < 3; colonnes++) { %>
                        <td>
                            <input type="checkbox" id="cell-<%= lignes %>-<%= colonnes %>">
                        </td>
                    <% } %>
                </tr>
            <% } %>
        </table>
        <button type="submit">Confirmer</button>
    </form>

    <script>
        document.getElementById('gameForm').addEventListener('submit', function(event) {
            event.preventDefault();

            
            const isWin = true; 

            if (isWin) {
                
                const confirmReplay = confirm('Vous avez gagn√©! Voulez-vous rejouer?');
                if (confirmReplay) {
                    
                    window.location.reload();
                }
            }
        });
    </script>

</body>
</html>